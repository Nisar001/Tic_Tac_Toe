  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set base URL if not set",
          "if (!pm.environment.get('apiUrl')) {",
          "    pm.environment.set('apiUrl', 'http://localhost:3000');",
          "}",
          "",
          "// Set common headers",
          "pm.request.headers.add({",
          "    key: 'Content-Type',",
          "    value: 'application/json'",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script",
          "const responseTime = pm.response.responseTime;",
          "const statusCode = pm.response.code;",
          "",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(responseTime).to.be.below(5000);",
          "});",
          "",
          "if (statusCode >= 200 && statusCode < 300) {",
          "    pm.test('Status code is successful', function () {",
          "        pm.expect(statusCode).to.be.oneOf([200, 201, 204]);",
          "    });",
          "}",
          "",
          "// Auto-store tokens from login/register responses",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.tokens) {",
          "    const tokens = pm.response.json().data.tokens;",
          "    pm.environment.set('accessToken', tokens.accessToken);",
          "    pm.environment.set('refreshToken', tokens.refreshToken);",
          "    console.log('Tokens stored successfully');",
          "}",
          "",
          "// Store user data",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.user) {",
          "    const user = pm.response.json().data.user;",
          "    pm.environment.set('userId', user._id || user.id);",
          "    pm.environment.set('userEmail', user.email);",
          "    console.log('User data stored successfully');",
          "}",
          "",
          "// Store game data",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.gameId) {",
          "    pm.environment.set('gameId', pm.response.json().data.gameId);",
          "}",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.roomId) {",
          "    pm.environment.set('roomId', pm.response.json().data.roomId);",
          "}"
        ]
      }
    }
  ],
