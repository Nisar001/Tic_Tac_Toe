                  "    pm.expect(pm.response.json().success).to.be.true;",
                  "    pm.expect(pm.response.json().data.tokens).to.exist;",
                  "    pm.expect(pm.response.json().data.user).to.exist;",
                  "});",
                  "",
                  "// Store tokens and user info",
                  "if (pm.response.json().data && pm.response.json().data.tokens) {",
                  "    pm.environment.set('accessToken', pm.response.json().data.tokens.accessToken);",
                  "    pm.environment.set('refreshToken', pm.response.json().data.tokens.refreshToken);",
                  "    pm.environment.set('userId', pm.response.json().data.user.id);",
                  "    pm.environment.set('username', pm.response.json().data.user.username);",
