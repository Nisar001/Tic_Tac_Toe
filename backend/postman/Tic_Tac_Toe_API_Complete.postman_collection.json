{
  "info": {
    "name": "Tic Tac Toe API - Complete Collection",
    "description": "Complete API collection for Tic Tac Toe multiplayer game with authentication, game management, chat, and social login features",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global pre-request script",
          "console.log('Starting request to:', pm.request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script",
          "pm.test('Status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
          "});",
          "",
          "// Store access token if present",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.tokens) {",
          "    pm.environment.set('accessToken', pm.response.json().data.tokens.accessToken);",
          "    pm.environment.set('refreshToken', pm.response.json().data.tokens.refreshToken);",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{apiUrl}}/api",
      "type": "string"
    }
  ],
